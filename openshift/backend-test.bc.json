{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "gwells-backend-bc",
        "creationTimestamp": null
    },
    "parameters": [
        {
          "name": "NAME_SUFFIX",
          "displayName": "Name Suffix",
          "description": "A suffix appended to all objects",
          "required": true
        },
        {
          "name": "SOURCE_REPOSITORY_URL",
          "required": true
        },
        {
          "name": "ENV_NAME",
          "required": true
        },
        {
          "name": "SOURCE_REPOSITORY_REF",
          "required": true
        },
        {
            "name": "APP_IMAGE_TAG",
            "required": true
        }
      ],  
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "gwells-python",
                "labels": {
                    "appver": "gwells-base-image"
                },
                "creationTimestamp": null,
                "annotations": {
                    "description": "Python Base Image with GIS-related External Libraries"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": false
                },
                "tags": [
                    {
                        "name": "3.6",
                        "annotations": null,
                        "from": {
                            "kind": "DockerImage",
                            "name": "docker-registry.default.svc:5000/moe-gwells-tools/gwells-python:v2"
                        },
                        "importPolicy": {},
                        "referencePolicy": {
                            "type": "Source"
                        }
                    }
                ]
            },
            "status": {
                "dockerImageRepository": ""
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "gwells${NAME_SUFFIX}",
                "creationTimestamp": null,
                "labels": {
                    "appver": "gwells${NAME_SUFFIX}"
                },
                "annotations": {
                    "description": "Defines how to build the application"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "AJCEEFtBbNqeZOcLjeJ1"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "bd6OIT2Czbx0TBj9Rgqi"
                        }
                    },
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/bcgov/gwells",
                        "ref": "feature/gis-backend-with-configmap"
                    },
                    "contextDir": "docker-images/python-gdal"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "gwells-python:3.6"
                        },
                        "env": [
                            {
                                "name": "BUILD_LOGLEVEL",
                                "value": "4"
                            },
                            {
                                "name": "PIP_INDEX_URL"
                            },
                            {
                                "name": "UPGRADE_PIP_TO_LATEST",
                                "value": "true"
                            },
                            {
                                "name": "JWT_PUBLIC_KEY",
                                "value": "-----BEGIN PUBLIC KEY-----\\\\n-----END PUBLIC KEY-----"
                            },
                            {
                                "name": "JWT_AUDIENCE",
                                "value": "webapp-dev-local"
                            }
                        ]                        
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "gwells-python:${APP_IMAGE_TAG}"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "2",
                        "memory": "8Gi"
                    },
                    "requests": {
                        "cpu": "1",
                        "memory": "4Gi"
                    }
                },
                "nodeSelector": null
            }
        }
    ]
}
